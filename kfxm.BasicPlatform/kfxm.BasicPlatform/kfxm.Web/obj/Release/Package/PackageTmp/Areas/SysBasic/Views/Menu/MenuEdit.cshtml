@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MenuAdd</title>
    <link href="/css/hbes.grid.css" rel="stylesheet" />
    <link href="/css/hbes.reset.css" rel="stylesheet" />
    <link href="/css/zTree/zTreeStyle/zTreeStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="/js/layui/css/layui.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/hbes-ui.js"></script>
    <script src="/js/layui/layui.all.js"></script>  
    <script src="/js/zTree/jquery.ztree.core.min.js"></script>
</head>
<body style="overflow-x: hidden;position:fixed;">
    <div id="page-content" class="page-content">
   <form id="formData" >
      
     <table  class="formtable" >
            <colgroup>
                 <col style="width:30%;" />
                <col  />
            </colgroup>
            <tr>
                <td class="ft_label" >上级菜单</td>
                <td class="ft_control">
                    <input type="text" id="txt_ParentText"  readonly="readonly"  value="@ViewData["parentName"]"
                         name="ParentText"  class="hbes-input" style="width:95%;cursor:no-drop; background:#fbfbfb;" />
                    <input type="hidden" id="txt_Id"  name="Id" value="@Model.Id" class="hbes-input"/>

                </td>
            </tr>
            <tr>
                <td class="ft_label" >菜单名称</td>
                <td class="ft_control">
                    <input type="text" name="MenuName" value="@Model.MenuName" class="hbes-input" style="width:95%; "   vtype="required:true;maxLength:20;" />
                </td>
            </tr>
            <tr>
                <td class="ft_label" >Url</td>
                <td class="ft_control">
                    <input type="text" name="Url" value="@Model.Url"   class="hbes-input" style="width:95%;" />
                </td>
            </tr>
            <tr>
                <td class="ft_label" >排序值</td>
                <td class="ft_control">
                    <input type="text" name="OrderValue" value="@Model.OrderValue" class="hbes-input" style="width:95%;"  vtype="int;"  style="width:80px;"/>
                </td>
            </tr>
        </table>
    
      <div class="bottomBtnDiv">
           <button class="layui-btn layui-btn-small layui-btn-normal" onclick="save()" type="button">确定</button>
           <button class="layui-btn layui-btn-small layui-btn-primary" onclick="closeWin()" type="button">关闭</button>
       </div>
   </form>
        </div>
    <script type="text/javascript">

     

        function save() {
            if ($("#txt_ParentText").val().trim() == "") {
                $("#txt_ParentId").val("");
            }
            if (!$("#formData").valiForm()) {
                return;
            }
            var formData = getFormMap("formData");
            var postData = { data: formData };
            submitData("/SysBasic/Menu/EditMenu", postData);
        }

    </script>

</body>
</html>
