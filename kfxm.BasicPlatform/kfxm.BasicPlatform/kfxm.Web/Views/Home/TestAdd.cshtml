@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
     <link href="/css/hbes.reset.css" rel="stylesheet" />
     <link rel="stylesheet" href="/js/layui/css/layui.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/hbes-ui.js"></script>
    <script src="/js/hbes.validate.js"></script>
    <script src="/js/layui/layui.all.js"></script> 

</head>
<body>
    <form id="formData" class="ma-20">
       
             <table  class="formtable" >
            <colgroup>
                <col style="width:200px;" />
                <col  />
                 <col style="width:200px;" />
                <col  />
            </colgroup>
            <tr>
                <td class="ft_label" >不允许为空</td>
                <td class="ft_control">
                     <input type="text"  class="form-control hbes-input" style="width:90%;" vtype="required:true;" />
                </td>
            
                <td class="ft_label" >整数</td>
                <td class="ft_control">
                     <input type="text"   class="form-control hbes-input" style="width:90%;" vtype="required:true;int;" />
                </td>
            </tr>
            <tr>
                <td class="ft_label" >email</td>
                <td class="ft_control">
                     <input type="text"  class="form-control hbes-input" style="width:90%;" vtype="required:true;email;" />
                </td>
           
                <td class="ft_label" >url</td>
                <td class="ft_control">
                     <input type="text"  class="form-control hbes-input" style="width:90%;" vtype="required:true;url;" />
                </td>
            </tr>
            <tr>
                <td class="ft_label" >float</td>
                <td class="ft_control">
                     <input type="text"  class="form-control hbes-input" style="width:90%;" vtype="required:true;float;" />
                </td>
           
                <td class="ft_label" >字符串长度（<= 6）</td>
                <td class="ft_control">
                     <input type="text"  class="form-control hbes-input" style="width:90%;" vtype="maxLength:6" />
                </td>
            </tr>
             <tr>
                <td class="ft_label" >字符串长度（>= 2）</td>
                <td class="ft_control">
                     <input type="text"  class="form-control hbes-input" style="width:90%;" vtype="minLength:2" />
                </td>
           
                <td class="ft_label" >字符串长度（>= 2 & <= 6）(2-6)</td>
                <td class="ft_control">
                     <input type="text"  class="form-control hbes-input" style="width:90%;" vtype="rangeLength:2,6" />
                </td>
            </tr>

           <tr>
                <td class="ft_label" >数字(<=6)</td>
                <td class="ft_control">
                     <input type="text"  class="form-control hbes-input" style="width:90%;" vtype="max:6" />
                </td>
           
                <td class="ft_label" >数字(>=2)</td>
                <td class="ft_control">
                     <input type="text"  class="form-control hbes-input" style="width:90%;" vtype="min:2" />
                </td>
            </tr>

           <tr>
                <td class="ft_label" >数字(>=2&<=6)</td>
                <td class="ft_control">
                     <input type="text"  class="form-control hbes-input" style="width:90%;" vtype="range:2,6" />
                </td>
           
                <td class="ft_label" >自定义验证（值为"helloworld"）</td>
                <td class="ft_control">
                     <input type="text" id="form-control"  class="form-control hbes-input"   style="width:90%;" onvalidation="myValidate" />
                </td>
            </tr>

                 <tr>
                     <td class="ft_label" >下拉框</td>
                     <td class="ft_control">
                         <input class="hbes-combox" id="t_combox" style="width:90%;" 
                             showNullItem="true" vtype="required" maxHeight="500"
                             value="1" data="[{id:1,text:'北京'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'},{id:2,text:'上海'}]"/>
                         
                     </td>
                   <td class="ft_label" >下拉框（多选）</td>
                     <td class="ft_control">
                         <input class="hbes-combox" id="t_combox1" 
                             multiSelect="true"
                             style="width:90%;" value="2" 
                             data="[{id:1,text:'北京'},{id:2,text:'上海'}]"/>
                         
                     </td>
                 </tr>
                  <tr>
                     <td class="ft_label" >日期控件</td>
                     <td class="ft_control">
                          
                         <input type="text"   class="form-control hbes-input"   style="width:90%;"  onclick="dataInput(this)"   /></td>
                      <td class="ft_label" >控件</td>
                     <td class="ft_control"><input type="text"   class="form-control hbes-input"   style="width:90%;"  /></td>
                 </tr>

             </table>
            
          <div class="bottomBtnDiv">
           <button class="layui-btn layui-btn-small layui-btn-normal" onclick="save()" type="button">确定</button>
           <button class="layui-btn layui-btn-small layui-btn-primary" onclick="closeWin()" type="button">关闭</button>
          </div>
       
      
     </form>
    <script type="text/javascript">
        $(function ()
        {
            $(".hbes-combox").comboxInit();
            //var combox = $(".hbes-combox");
            //
          
          
            //div.css("height", (treecombox.height() + 100) + "px");
           
            //combox.wrap(div);
           

        });
        var defulatTime = "";
        function dataInput(el)
        {
            var datapptions =
                {
                    elem: el,
                    format: 'YYYY-MM-DD hh:mm:ss',
                    istime: false,
                    istoday: false,
                    choose: function (dates) {
                        defulatTime = dates;
                    } //选择好日期的回调
 
            
                };
            el.value = "";
            layui.laydate(datapptions);
            el.value = defulatTime;
           
        }
        
            
        


        function myValidate(el) {
            var obj = new Object();
            obj.isPass = true;
            obj.msg = "";
            if (el.val() != "helloworld")
            {
                obj.isPass = false;
                obj.msg = "值不等于helloworld";
            }
            return obj;
        }

        function save() {
            $("#t_combox").showCombox();
            if (!$("#formData").valiForm())
            {
                
                return;
            }
            var formData = getFormMap("formData");
            var postData = { data: formData };

            
        }
    </script>
</body>
</html>
